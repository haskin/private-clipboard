{
    "name": "Temporary-Clipboard",
    "version": "1.0",
    "permissions": ["contextMenus","activeTab","declarativeContent","storage", "<all_urls>"],
    "background": {
        "scripts":["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
          "matches": ["http://*/*", "https://*/*"],
          "js": ["onCopy.js"]
        }
    ],
    "page_action": {
        "default_popup": "popup.html"
    },
    "manifest_version": 2
}