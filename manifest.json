{
    "name": "Private Clipboard",
    "version": "1.0",
    "icons":{
        "16": "./icons/icon.png",
        "48": "./icons/icon.png",
       "128": "./icons/icon.png" 
    },
    "permissions": ["storage","declarativeContent", "<all_urls>", "tabs"],
    "background": {
        "scripts":["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
          "matches": ["http://*/*", "https://*/*"],
          "js": ["onCopy.js"]
        }
    ],
    "page_action": {
        "default_popup": "popup.html"
    },
    "manifest_version": 2
}